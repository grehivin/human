@model FrontEnd.Models.StudentViewModel

@{
    ViewData["Title"] = "Personas";
}

<h1>Registro</h1>

<h4>Nuevo estudiante</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="SignUp">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h6>Datos personales</h6>
            <div class="form-group">
                <label asp-for=@Model.Person.Name class="control-label"></label>
                <input asp-for=@Model.Person.Name class="form-control" />
                <span asp-validation-for=@Model.Person.Name class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=@Model.Person.Lastname class="control-label"></label>
                <input asp-for=@Model.Person.Lastname class="form-control" />
                <span asp-validation-for=@Model.Person.Lastname class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=@Model.Person.Email class="control-label"></label>
                <input asp-for=@Model.Person.Email class="form-control" />
                <span asp-validation-for=@Model.Person.Email class="text-danger"></span>
            </div>
            <br />
            <h6>Datos de usuario</h6>
            <div class="form-group">
                <label asp-for=@Model.User.Username class="control-label"></label>
                <input asp-for=@Model.User.Username class="form-control" />
                <span asp-validation-for=@Model.User.Username class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=@Model.User.Password class="control-label"></label>
                <input asp-for=@Model.User.Password class="form-control" />
                <span asp-validation-for=@Model.User.Password class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=@Model.User.ConfirmPassword class="control-label"></label>
                <input asp-for=@Model.User.ConfirmPassword class="form-control" />
                <span asp-validation-for=@Model.User.ConfirmPassword class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Registrarme" /> 
                <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Cancelar</a> 
            </div>

        </form>
    </div>
</div>